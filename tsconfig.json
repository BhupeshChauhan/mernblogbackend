{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./api/*.ts",
    "src/**/*.ts",
    "test/**/*.ts", "index.ts", "app.ts", "middlewares.ts", "api.test.ts", "app.test.ts",
  ],
}
